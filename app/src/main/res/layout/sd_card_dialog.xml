<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView_SD_Card_Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/Text_SD_Card_Dialog"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <EditText
        android:id="@+id/EditText_Sd_Card_Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_SD_Card_Dialog"
        android:layout_alignRight="@+id/TextView_SD_Card_Dialog"
        android:layout_below="@+id/TextView_SD_Card_Dialog"
        android:ems="10"
        android:text="@string/MyStream" />

</RelativeLayout>